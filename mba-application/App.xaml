<Application x:Class="mba_application.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModels="clr-namespace:mba_application.ViewModels"
             xmlns:converters="clr-namespace:mba_application.MBAComponents.MBAConverters"
             StartupUri="Views/MainView.xaml" 
             Startup="OnAppStartup_UpdateThemeName">
    <Application.Resources>
        <ViewModels:PhoneViewModel x:Key="PhoneViewModel"/>
        <converters:PhoneConverter x:Key="PhoneConverter"/>
        <Image x:Key="CallButtonImage" Source="pack://application:,,,/mba-application;component/Resources/Images/Icons/callButtonImage.png"/>
    </Application.Resources>
</Application>
